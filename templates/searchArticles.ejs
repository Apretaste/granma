<div class="row">
	<div class="col s12">
		<%if(isCategory){%>
			<h1>Categoria: <%=search%></h1>
		<%}else{%>
			<h1>Buscar: <%=search%></h1>
		<%}%>
		
		<ul class="collection">	
			<% articles.forEach(article =>{%>
				<li class="collection-item">
					<%if (article.description.length>200) article.description=article.description.slice(0,200)+"..."%>
						<a onclick="apretaste.send({'command':'GRANMA HISTORIA','data':{'historia':'<%=article.link%>', 'search':'<%=search%>', 'isCategory':'<%=isCategory%>'}})"><h6><b><%=article.title.toUpperCase()%></b></h6></a>
						<%if(article.description.length!=0){%>
							<p><%=article.description %></p>
						<%}%>
						<small><%-article.pubDate%></small>
				</li>
			<%});%>
		</ul>
		<div class="fixed-action-btn">
			<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'GRANMA'})"><i class="material-icons">arrow_back</i></a>
		</div>
	</div>
</div>