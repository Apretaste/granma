<div class="row">
	<div class="col s12">
		<h1><%= search %></h1>

		<ul class="collection">
			<% for(var i=0; i<articles.length; i++) { 
				article = articles[i]; %>
				<li class="collection-item">
					<% if (article.description.length > 200) article.description = article.description.slice(0,200) + "..." %>
					
					<a href="#!" onclick="apretaste.send({'command':'GRANMA HISTORIA','data':{'historia':'<%=article.link%>', 'search':'<%=search%>', 'isCategory':'<%=isCategory%>'}})"><h6><b><%= article.title.toUpperCase() %></b></h6></a>
					
					<% if(article.description.length!=0) { %>
						<p><%= article.description %></p>
					<% } %>
					
					<small><%- article.pubDate %></small>
				</li>
			<% } %>
		</ul>
		<div class="fixed-action-btn">
			<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'GRANMA'})"><i class="material-icons">arrow_back</i></a>
		</div>
	</div>
</div>