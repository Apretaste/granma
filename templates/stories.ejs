<div class="row">
	<div class="col s12">
		<ul class="collection">
			<% articles.forEach(function(article) { %>
				<li class="collection-item">
					<a href="#!" onclick="apretaste.send({'command':'GRANMA HISTORIA','data':{'historia':'<%= article.link %>'}})">
						<h1 class="title"><%= article.title %></h1>
					</a>

					<% if(article.description.length > 0) { %>
						<p><%= article.description %></p>
					<% } %>

					<small>
						<%= article.pubDate %>

						<% if(article.author != "") { %>
							&bull; 
							<i><%= article.author %></i>
						<% } %>
					</small>

					<div>
						<% article.category.forEach(function(cat) { %>
							<div class= "chip tiny"><%= cat %></div>
						<% }) %>
					</div>
				</li>
			<% }) %>
		</ul>
	</div>
</div>