<div class="row">
	<div class="col s12" id="article">
		<h1><%= title %></h1>

		<% if(img != "") { %>
			<div class="center-align">	
				<img class="responsive-img" src="{{APP_IMAGE_PATH}}/<%= img %>" alt="<%= title %>">
			</div>
		<% } %>

		<small>
			<blockquote>
				<p><i><%= intro %></i></p>
			</blockquote>
		</small>

		<section>
			<% for(var i=0; i<content.length; i++) {%>
				<p style="text-align:left;"><%= content[i] %></p>
			<% } %>
		</section>

		<div class="fixed-action-btn">
			<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'GRANMA'})"><i class="material-icons">arrow_back</i></a>
		</div>
	</div>
</div>
